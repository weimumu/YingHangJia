<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="#394264"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/RegisterRelativeLayout"
        android:background="#50597b"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        >
        <Button
            android:id="@+id/ActionBarBackButton"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:background="@drawable/back"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="18sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/RegisterRelativeLayout"
        android:layout_centerVertical="true"
        android:id="@+id/relativeLayout">
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/login_register_button"
            android:gravity="center"
            android:textSize="20sp"
            android:text="问卷说明"
            android:layout_width="300dp"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayout"
        android:id="@+id/relativeLayout2"></RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_alignEnd="@+id/relativeLayout2">
<CheckBox
    android:id="@+id/xieyi_button"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="22dp"
    android:text="我同意协议"
    android:buttonTint="#a6adcb"
    android:includeFontPadding="false"
    android:textColor="#a6adcb"
    android:textSize="14sp"
    />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RegisterButtonBar"
        android:layout_below="@+id/RegisterConfirmBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="513dp"
        android:layout_width="120dp"
        android:layout_height="35dp">
        <Button
            android:id="@+id/RegisternextButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="下一步"
            android:textColor="@color/login_register_button"
            android:textSize="20dp"
            />
    </RelativeLayout>
</RelativeLayout>