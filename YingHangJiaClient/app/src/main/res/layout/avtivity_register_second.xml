<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <android.support.percent.PercentRelativeLayout
        android:background="#0667c8"
        android:layout_height="0dp"
        app:layout_heightPercent = "7.73%"
        android:layout_width="fill_parent">
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <Button
                android:background="@drawable/return_button"
                android:layout_width="13dp"
                android:layout_height="23dp"
                android:id="@+id/button8"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textSize="19dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:background="#ffffff"
        app:layout_marginTopPercent = "7.73%"
        android:layout_height="match_parent"
        android:layout_width="fill_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="7dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="问卷说明"
                android:id="@+id/textView21"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout2">
                <Button
                    android:textSize="23dp"
                    android:layout_marginLeft="215dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/next_button_background"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="下一页"
                    android:id="@+id/button2"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_above="@+id/relativeLayout2"
                android:layout_centerHorizontal="true"
                android:id="@+id/relativeLayout5">

                <RadioButton
                    android:checked="false"
                    android:layout_marginTop="1.5dp"
                    android:background="@drawable/shape_xiyi_background"
                    android:button="@null"
                    android:layout_marginLeft="15dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/radioButton8"
                     />

                <TextView
                    android:layout_marginLeft="15dp"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="我同意"
                    android:id="@+id/textView22"
                    android:layout_alignBottom="@+id/radioButton8"
                    android:layout_toRightOf="@+id/radioButton8"
                    android:layout_toEndOf="@+id/radioButton8" />

                <TextView
                    android:textSize="12dp"
                    android:textColor="#0667c8"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="<用户服务注册协议>"
                    android:id="@+id/textView23"
                    android:layout_below="@+id/textView22"
                    android:layout_alignLeft="@+id/textView22" />

                <TextView
                    android:textSize="12dp"
                    android:textColor="#0667c8"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="<安全协议>"
                    android:id="@+id/textView24"
                    android:layout_below="@+id/textView23"
                    android:layout_alignLeft="@+id/textView23"
                    android:layout_alignStart="@+id/textView23" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="37dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/textView21"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/relativeLayout5">

                <TextView
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="尊敬的先生/女士 :
        您好!
        为了了解您理财的风险偏好和风险承受能力，及录入基本信息，以便我们针对您的个体特殊推荐相应的理财产品，现需要耽误您几分钟填写一下问卷测试。问卷完成后我们会有直接的测试结果，并据此推荐较为符合你的理财产品。"
                    android:id="@+id/textView25"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>