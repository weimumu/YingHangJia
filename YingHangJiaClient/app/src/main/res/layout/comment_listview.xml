<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/user_photo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView31"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginTop="4dp"
        android:layout_marginLeft="6dp"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="习小小"
        android:id="@+id/textView30"
        android:layout_alignTop="@+id/imageView31"
        android:layout_toRightOf="@+id/imageView31"
        android:layout_toEndOf="@+id/imageView31" />

    <TextView
        android:layout_marginTop="5dp"
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:id="@+id/textView31"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView31"
        android:layout_alignLeft="@+id/imageView31"
        android:layout_alignStart="@+id/imageView31" />

    <TextView
        android:layout_marginTop="7dp"
        android:textSize="13dp"
        android:textColor="#a0a0a0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016.08.01"
        android:id="@+id/textView33"
        android:layout_below="@+id/textView31"
        android:layout_alignLeft="@+id/textView31"
        android:layout_alignStart="@+id/textView31" />

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:background="#a0a0a0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView33"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></RelativeLayout>
</RelativeLayout>