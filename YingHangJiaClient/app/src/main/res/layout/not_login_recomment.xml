<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7.73%"
        >
        <RelativeLayout
            android:background="#0667c8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout8"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:background="@drawable/login"
                android:layout_width="32dp"
                android:layout_height="40dp"
                android:id="@+id/button4" />
            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_width="45dp"
                android:layout_height="match_parent">
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_centerVertical="true"
                    android:background="@drawable/product"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:id="@+id/button5" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_centerVertical="true"
                android:background="@drawable/search_background1"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/search"
                    android:layout_centerVertical="true"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@null"
                    android:gravity="bottom"
                    android:layout_marginLeft="29dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/search_Info_button" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        app:layout_marginTopPercent="7.73%"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="24.54%">
        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewFlipper"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        app:layout_marginTopPercent="32.27%"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="2.42%"
        android:background="#eeeeee">
    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        app:layout_marginTopPercent="34.69%"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="8.25%"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout45"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout11">

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:textColor="#253e7e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新理财产品"
                    android:textSize="16dp"
                    android:id="@+id/textView10"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:background="@drawable/corn"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imageView" />

                <ImageView
                    android:background="@drawable/corn"
                    android:layout_marginLeft="150dp"
                    android:layout_centerVertical="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imageView2"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        app:layout_marginTopPercent="42.94%"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="49.89%"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listView2"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true" />
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:background="#eeeeee"
        app:layout_marginTopPercent="92.83%"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7.17%"
        >
        <RelativeLayout
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout18">

            <TextView
                android:textSize="15dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#253e7e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录后可查看专属推荐"
                android:id="@+id/textView16"
                />
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
