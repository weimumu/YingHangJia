<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="107dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/zixun_collect_background">

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/textView110"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/relativeLayout56"
                android:layout_alignStart="@+id/relativeLayout56"
                android:layout_alignTop="@+id/imageView23"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:text="银行理财最严新规将出"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="10dp" />

            <RelativeLayout
                android:id="@+id/relativeLayout56"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_below="@+id/textView110"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/imageView23"
                android:layout_toRightOf="@+id/imageView23"
                android:background="#0667c8"></RelativeLayout>

            <TextView
                android:id="@+id/textView111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/relativeLayout56"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/relativeLayout56"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:text="2016-08-17"
                android:textColor="#a0a0a0"
                android:textSize="10dp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
