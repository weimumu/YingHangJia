<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#eeeeee"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="107dp">
<RelativeLayout
    android:layout_marginTop="17dp"
    android:background="@drawable/zixun_collect_background"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:background="@drawable/zixun_example_image"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="145dp"
        android:layout_height="match_parent"
        android:id="@+id/imageView23"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginLeft="3dp"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="银行理财最严新规将出"
        android:id="@+id/textView110"
        android:layout_alignTop="@+id/imageView23"
        android:layout_alignLeft="@+id/relativeLayout56"
        android:layout_alignStart="@+id/relativeLayout56" />

    <RelativeLayout
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="#0667c8"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/textView110"
        android:layout_toRightOf="@+id/imageView23"
        android:layout_toEndOf="@+id/imageView23"
        android:id="@+id/relativeLayout56"></RelativeLayout>

    <TextView
        android:textSize="12dp"
        android:textColor="#a0a0a0"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-08-17"
        android:id="@+id/textView111"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/relativeLayout56"
        android:layout_alignEnd="@+id/relativeLayout56" />
</RelativeLayout>
</RelativeLayout>
</LinearLayout>
