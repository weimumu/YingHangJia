<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeeeee"
    android:orientation="vertical">
    <android.support.percent.PercentRelativeLayout
        android:background="#0667c8"
        android:layout_height="0dp"
        app:layout_heightPercent = "7.73%"
        android:layout_width="fill_parent">
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/returnback_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button3"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="购买支付"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:layout_height="match_parent"
        app:layout_marginTopPercent = "7.73%"
        android:layout_width="fill_parent">
        <RelativeLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@drawable/kuang2"
                android:layout_marginLeft="30dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:id="@+id/relativeLayout21">

                <TextView
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加快捷支付银行卡"
                    android:id="@+id/textView34"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <RelativeLayout
                    android:background="@drawable/input_background"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/editText4"
                    android:layout_below="@+id/textView34"
                    android:layout_centerHorizontal="true" >

                    <ImageView
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/banker_logo"
                        android:layout_centerVertical="true"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:id="@+id/imageView32" />

                    <TextView
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中国工商银行"
                        android:id="@+id/textView35"
                        android:layout_toRightOf="@+id/imageView32"
                        android:layout_toEndOf="@+id/imageView32" />

                    <RelativeLayout
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:background="#a0a0a0"
                        android:layout_marginLeft="7dp"
                        android:layout_width="0.8dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/textView35"
                        android:id="@+id/relativeLayout"></RelativeLayout>

                    <EditText
                        android:textSize="15dp"
                        android:hint="单笔支付上限¥500,000,"
                        android:background="@null"
                        android:paddingLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/editText7"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/relativeLayout"
                        android:layout_toEndOf="@+id/relativeLayout" />
                </RelativeLayout>

                <EditText
                    android:textSize="17dp"
                    android:hint="输入银行卡号"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/input_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/editText5"
                    android:layout_below="@+id/editText4"
                    android:layout_centerHorizontal="true" />

                <EditText
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="17dp"
                    android:gravity="center"
                    android:hint="输入绑定手机号"
                    android:background="@drawable/input_background"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/editText6"
                    android:layout_below="@+id/editText5" />

            </RelativeLayout>

            <Button
                android:textSize="20dp"
                android:background="#fd720e"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="#ffffff"
                android:layout_marginTop="60dp"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="确认购买"
                android:id="@+id/button18"
                android:layout_below="@+id/relativeLayout21"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>