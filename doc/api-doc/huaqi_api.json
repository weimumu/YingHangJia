{
    "swagger": "2.0",
    "info": {
        "title": "server API",
        "version": "alpha"
    },
    "schemes": [
        "http"
    ],
    "basePath": "/",
    "produces": [
        "application/json"
    ],
    "paths": {
        "/api/signup": {
            "post": {
                "summary": "注册",
                "description": "提供用户名, 用户id, 密码进行注册\n",
                "parameters": [
                    {
                        "name": "name",
                        "in": "formData",
                        "description": "用户名",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "description": "密码",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "注册成功"
                    },
                    "400": {
                        "description": "参数错误, 参数提供不全"
                    },
                    "403": {
                        "description": "注册失败"
                    },
                    "500": {
                        "description": "服务器内部错误"
                    }
                }
            }
        },
        "/api/signin": {
            "post": {
                "summary": "登录",
                "description": "提供用户名密码登录",
                "parameters": [
                    {
                        "name": "name",
                        "in": "formData",
                        "description": "用户名",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "description": "密码",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "登录成功"
                    },
                    "400": {
                        "description": "参数提供不全"
                    },
                    "404": {
                        "description": "登录失败"
                    }
                }
            }
        },
        "/api/user/{{userId}}": {
            "get": {
                "summary": "获取账户信息",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "用户id",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "请求成功，返回账户信息",
                        "schema": {
                            "$ref": "#/definitions/UserInfo"
                        }
                    },
                    "404": {
                        "description": "获取失败"
                    },
                    "500": {
                        "description": "服务器内部错误"
                    }
                }
            },
            "post": {
                "summary": "修改用户信息",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "用户id",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "name",
                        "in": "formData",
                        "description": "用户名",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "score",
                        "in": "formData",
                        "description": "分数",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "scoreAge",
                        "in": "formData",
                        "description": "跟年龄相关的分数",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "age",
                        "in": "formData",
                        "description": "年龄",
                        "required": false,
                        "type": "integer"
                    },
                    {
                        "name": "phone",
                        "in": "formData",
                        "description": "手机",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "email",
                        "in": "formData",
                        "description": "email",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "gender",
                        "in": "formData",
                        "description": "性别",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "修改成功"
                    },
                    "403": {
                        "description": "修改失败"
                    },
                    "500": {
                        "description": "服务器内部错误"
                    }
                }
            }
        },
        "/api/user/password/{{userId}}": {
            "post": {
                "summary": "修改密码",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "用户id",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "修改成功"
                    },
                    "403": {
                        "description": "未修改"
                    }
                }
            }
        },
        "/api/user/checkIn/{{userId}}": {
            "post": {
                "summary": "签到, 没有一天签到多次的判重",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "用户id",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "修改成功"
                    },
                    "403": {
                        "description": "未修改"
                    }
                }
            }
        },
        "/api/star/{{userId}}": {
            "get": {
                "summary": "获取指定用户的收藏",
                "description": "根据用户 id 和 type 获取",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "用户id",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "type",
                        "in": "query",
                        "description": "类型：'prod' 为产品，'news' 为新闻",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "获取成功",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/News"
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "用户收藏",
                "description": "根据用户id收藏",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "用户id",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "type",
                        "in": "formData",
                        "description": "类型：'prod' 为产品，'news' 为新闻",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "starId",
                        "in": "formData",
                        "description": "收藏内容的id",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "修改成功"
                    },
                    "403": {
                        "description": "修改失败"
                    },
                    "500": {
                        "description": "服务器内部错误"
                    }
                }
            },
            "delete": {
                "summary": "删除收藏",
                "description": "根据 用户id type starId 删除",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "用户id",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "type",
                        "in": "query",
                        "description": "类型：'prod' 为产品，'news' 为新闻",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "starId",
                        "in": "query",
                        "description": "收藏内容的id",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "删除成功"
                    },
                    "403": {
                        "description": "删除失败"
                    },
                    "500": {
                        "description": "服务器内部错误"
                    }
                }
            }
        },
        "/api/product": {
            "get": {
                "summary": "条件查询产品",
                "parameters": [
                    {
                        "name": "bank",
                        "in": "query",
                        "description": "银行名称，如：农业银行",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "name",
                        "in": "query",
                        "description": "产品名称，如：得利宝",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "timeLimitL",
                        "in": "query",
                        "description": "投资期限下界，如：1个月",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "timeLimitH",
                        "in": "query",
                        "description": "投资期限上界，如：3个月",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "rateL",
                        "in": "query",
                        "description": "预期收益率下界，如：3%",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "rateH",
                        "in": "query",
                        "description": "预期收益率上界，如：5%",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "startAmountL",
                        "in": "query",
                        "description": "起售价下界，如：50000元",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "startAmountH",
                        "in": "query",
                        "description": "起售价上界，如：50000元",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "值是某个 item 的 _id， 获取该 item 的后10条记录，若不填此参数则返回最开始10条记录",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "获取成功",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Product"
                            }
                        }
                    },
                    "500": {
                        "description": "服务器内部错误"
                    }
                }
            }
        },
        "/api/product/{{productId}}": {
            "get": {
                "summary": "根据 id 获取产品",
                "parameters": [
                    {
                        "name": "productId",
                        "in": "path",
                        "description": "产品 id",
                        "type": "string",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "请求成功",
                        "schema": {
                            "$ref": "#/definitions/Product"
                        }
                    },
                    "400": {
                        "description": "参数错误"
                    },
                    "500": {
                        "description": "服务器内部错误"
                    }
                }
            }
        },
        "/api/product/comment/{{productId}}": {
            "put": {
                "summary": "为某个产品添加评论",
                "parameters": [
                    {
                        "name": "productId",
                        "in": "path",
                        "description": "产品id",
                        "type": "string",
                        "required": true
                    },
                    {
                        "name": "username",
                        "in": "formData",
                        "description": "用户名",
                        "type": "string",
                        "required": true
                    },
                    {
                        "name": "text",
                        "in": "formData",
                        "description": "评论内容",
                        "type": "string",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "请求成功，返回评论信息",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Comment"
                            }
                        }
                    },
                    "400": {
                        "description": "参数错误"
                    },
                    "500": {
                        "description": "服务器内部错误"
                    }
                }
            }
        },
        "/api/news": {
            "get": {
                "summary": "获取每日新闻",
                "responses": {
                    "200": {
                        "description": "请求成功",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/News"
                            }
                        }
                    },
                    "500": {
                        "description": "服务器内部错误"
                    }
                }
            }
        },
        "/api/feedback": {
            "put": {
                "summary": "添加反馈",
                "parameters": [
                    {
                        "name": "username",
                        "in": "formData",
                        "description": "用户名，非id",
                        "type": "string",
                        "required": true
                    },
                    {
                        "name": "text",
                        "in": "formData",
                        "description": "内容",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "添加反馈成功"
                    },
                    "500": {
                        "description": "服务器内部错误"
                    }
                }
            }
        }
    },
    "definitions": {
        "News": {
            "type": "object",
            "properties": {
                "_id": {
                    "type": "string"
                },
                "time": {
                    "type": "string"
                },
                "page": {
                    "type": "string"
                },
                "img": {
                    "type": "string"
                }
            }
        },
        "UserInfo": {
            "type": "object",
            "properties": {
                "score": {
                    "type": "integer",
                    "description": "分数"
                },
                "scoreAge": {
                    "type": "integer",
                    "description": "跟年龄相关的score"
                },
                "age": {
                    "type": "integer",
                    "description": "年龄"
                },
                "purchased": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Product"
                    },
                    "description": "已购买的产品"
                },
                "starProd": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "收藏产品的id列表"
                },
                "starNews": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "收藏的新闻的id列表"
                }
            }
        },
        "Comment": {
            "type": "object",
            "properties": {
                "_id": {
                    "type": "string"
                },
                "userId": {
                    "type": "string",
                    "description": "评论人的名字"
                },
                "text": {
                    "type": "string",
                    "description": "评论内容"
                }
            }
        },
        "Product": {
            "type": "object",
            "properties": {
                "_id": {
                    "type": "string"
                },
                "name": {
                    "type": "string",
                    "description": "产品名"
                },
                "bankName": {
                    "type": "string",
                    "description": "发行银行名字"
                }
            }
        }
    }
}